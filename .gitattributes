# .gitattributes - Ensure correct line endings for all files

# Shell scripts MUST use Unix line endings (LF)
*.sh text eol=lf

# PowerShell scripts use Windows line endings (CRLF)
*.ps1 text eol=crlf

# Docker files use Unix line endings (LF)
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Markdown files use Unix line endings for consistency
*.md text eol=lf

# General text files
*.txt text
*.json text
*.yml text eol=lf
*.yaml text eol=lf

# Binary files (do not convert)
*.png binary
*.jpg binary
*.exe binary

